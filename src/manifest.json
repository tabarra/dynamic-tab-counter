{
  "name": "Dynamic Tab Counter",
  "short_name": "Dynamic Tab Counter",
  "author": "Andre Tabarra",
  "homepage_url": "https://github.com/tabarra/dynamic-tab-counter",
  "version": "4.1",
  "description": "Shows the number of tabs in each window with customizable threshold colors.",
  "manifest_version": 2,
  "icons": {
    "16": "icon16.gif",
    "64": "icon.svg"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "dynamic-tab-counter2@tabarra",
      "strict_min_version": "63.0"
    }
  },
  "permissions": [
    "storage"
  ],
  "browser_action": {
    "default_icon": {
      "16": "icon16.gif",
      "64": "icon.svg"
    },
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "options.html"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  }
}
